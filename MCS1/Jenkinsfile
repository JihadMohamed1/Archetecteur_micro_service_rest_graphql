def gv
pipeline{
  agent any
  
  parameters{
    choice( name : 'VERSION' , choices : ['1.1.0','1.1.1'], description : '')
    booleanParam( name : 'executeTests' , defaultValue : true , description : '')
  }
  stages{
        stage("init"){
      steps{
        echo 'here'
       script{
         gv = Load "script.groovy"
       }
        echo 'here end'
            }
                 }
    stage("build"){
      steps{
        script{
        gv.buildApp()
        }
            }
                 }
    stage("test"){
      when{
        expression{
          params.executeTests
        }
      }
      steps{
        script{
       gv.testApp()
        }
            }
                 }
    stage("deploy"){
      steps{
        script{
        gv.deployApp()
        }
            }
                 }
  }
  
}
