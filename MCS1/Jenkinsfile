def gv

pipeline{
  agent any
  tools{
    maven 'maven'
  }
 
  stages{
        stage("init"){
      steps{
        echo 'here'
       script{
         gv = load "MCS1/script.groovy"
       }
        echo 'here end'
            }
                 }
    stage("build jar"){
      steps{
        script{
        gv.buildJar()
        }
            }
                 }
     stage("build image"){
      steps{
        script{
        gv.buildImage()
        }
            }
                 }
   
    stage("deploy"){
      steps{
        echo 'deployment'
            }
         }
  }
  
}
